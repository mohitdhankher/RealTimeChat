
<%- include('layouts/header.ejs') %>
<h2 class="mb-4">Hii, <%= user.name %></h2>

<div class="row">
    <div class="col-md-3">
        <ul>
            <%
               if(users.length>0){
                  for(let i=0; i<users.length; i++){
                    %>
                     <li class="list-group-item list-group-item-dar cursor-pointer user-list" data-id="<%= users[i]['_id'] %>">
                        <img src="<%= 'http://localhost:3000/' + users[i]['image'] %>" alt="" width="50px" height="50px">
                        <%= users[i]['name'] %>

                        <%
                            if(users[i]['is_online'] == 1){
                                %>
                                   <sup class="online-status" id="<%= users[i]['_id'] %>-status">Online</sup>
                                <%
                            } else{
                                %>
                                <sup class="offline-status" id="<%= users[i]['_id'] %>-status">Offline</sup>
                                <%
                            }
                        %>
                     </li>
                    <%
                  }
               }
            %>
        </ul>

    </div>
    <div class="col-md-9">
         <h3 class="start-head"> click to start chat</h3>
         <div class="chat-section">
            <div id="chat-container">

            </div>
            <form action="" id="chat-form">
                <input type="text" name="message" placeholder="Enter message" id="message"  class="border">
                <input type="submit" value="Send Message" class="btn btn-primary">
             </form>
             
         </div>
       
    </div>
</div>
<%- include('layouts/footer.ejs') %>

